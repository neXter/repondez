.page-header
  = link_to guests_path, :class => 'btn' do
    %i.icon-list-alt
    Back
  = link_to edit_guest_path(@guest), :class => 'btn btn-primary' do
    %i.icon-pencil.icon-white
    Edit
  %h1 Listing guests

%dl
  %dt Name
  %dd= @guest.full_name
  %dt Answers
  - if @guest.answers.empty?
    %dd None
  - else
    - @guest.answers.each do |answer|
      %dd <em>#{answer.question.label}:</em> #{answer.answer_text}
